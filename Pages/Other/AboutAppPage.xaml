<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DvijCShapr.Pages.Other.AboutAppPage"
             Title="О приложении"
             Shell.BackgroundColor="Black"
             >
    <VerticalStackLayout
        BackgroundColor="#1d1d1d"
        Padding="10"
        Spacing="10"
        >
        <Label 
            Text="Страница о приложении"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="White"
            />

        <Line BackgroundColor="White"/>

        <Button Text="Реклама в приложении"
                Clicked="GoToAdBtn_Clicked"
                x:Name="GoToAdPage"
                BackgroundColor="Yellow"
                TextColor="Black"
                FontSize="15"/>

        <Button x:Name="GoToFeedbackPage"
                Text="Обратная связь"
                Clicked="GoToFeedbackPage_Clicked"/>

        <Button x:Name="GoToPrivacyPolicyPage"
                Text="Политика конфиденциальности"
                Clicked="GoToPrivacyPolicyPage_Clicked"/>

    </VerticalStackLayout>
</ContentPage>